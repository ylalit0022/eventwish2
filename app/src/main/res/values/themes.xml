<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.EventWish" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/surface_variant_light</item>
        <item name="colorOnSurfaceVariant">@color/gray</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/black</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/statusBarColor</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.EventWish.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.EventWish.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.EventWish.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.EventWish.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.EventWish.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.EventWish.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.EventWish.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.EventWish.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.EventWish.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.EventWish.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.EventWish.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.EventWish.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.EventWish.Overline</item>
        
        <!-- Component styles -->
        <item name="materialCardViewStyle">@style/Widget.EventWish.CardView</item>
        <item name="chipStyle">@style/Widget.EventWish.Chip</item>
        <item name="textInputStyle">@style/Widget.EventWish.TextInputLayout</item>
    </style>

    <style name="Theme.EventWish.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor">@color/splash_background</item>
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>