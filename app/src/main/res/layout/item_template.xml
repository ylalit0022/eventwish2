<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:animateLayoutChanges="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ad_ripple_effect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image with overlapping title -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/template_image"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/template_image_description"
                    tools:src="@drawable/placeholder_image" />

                <!-- Gradient overlay for better text visibility -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/gradient_overlay" />

                <!-- Badges at top-right -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:orientation="vertical">
                    
                    <TextView
                        android:id="@+id/newBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEW"
                        android:textColor="?attr/colorOnPrimary"
                        android:background="?attr/colorSecondary"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_margin="8dp"
                        android:visibility="gone"
                        tools:visibility="visible" />
                        
                    <LinearLayout
                        android:id="@+id/recommendedBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_recommended_badge"
                        android:layout_margin="8dp"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        tools:visibility="visible">
                        
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_star"
                            android:contentDescription="Recommended star icon"
                            android:layout_marginEnd="4dp" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RECOMMENDED"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                
                <!-- Title overlapping at bottom of image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:padding="12dp"
                    android:background="@drawable/gradient_overlay_bottom">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="Template Title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        
                        <ImageView
                            android:id="@+id/categoryIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_category"
                            android:contentDescription="Category icon"
                            android:visibility="visible"
                            android:alpha="0.9"
                            android:tint="#FFFFFF" />
                            
                        <TextView
                            android:id="@+id/categoryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="4dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="Category" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Instagram-style interaction buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:id="@+id/likeIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_heart_outline"
                        android:contentDescription="Like template"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                        
                    <TextView
                        android:id="@+id/likeCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginStart="4dp"
                        android:layout_gravity="center_vertical"
                        tools:text="12" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/favoriteIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_bookmark_outline"
                    android:contentDescription="Save to favorites"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />
                    
                <TextView
                    android:id="@+id/favoriteCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_gravity="center_vertical"
                    tools:text="8" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
