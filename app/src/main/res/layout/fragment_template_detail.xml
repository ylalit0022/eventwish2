<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Loading View -->
    <FrameLayout
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface_variant_light"
        android:visibility="gone"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true">

        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="?attr/colorPrimary"/>
    </FrameLayout>

    <!-- Content Layout -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingHorizontal="16dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:clickable="true">

            <!-- Input Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/inputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/senderNameLayout"
                        style="@style/Widget.EventWish.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:counterEnabled="true"
                        app:counterMaxLength="60">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/senderNameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:maxLength="60" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/recipientNameLayout"
                        style="@style/Widget.EventWish.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        app:counterEnabled="true"
                        app:counterMaxLength="60">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/recipientNameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:maxLength="60" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Template Preview -->
            <FrameLayout
                android:id="@+id/templatePreview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintTop_toBottomOf="@id/materialCardView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:clickable="true">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/surface"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:clickable="true">

                    <WebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:focusableInTouchMode="true"
                        android:focusable="true"
                        android:clickable="true" />

                    <!-- Updated WebView Progress Layout -->
                    <FrameLayout
                        android:id="@+id/webViewProgressContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/surface_variant_light"
                        android:visibility="gone">

                        <ProgressBar
                            android:id="@+id/webViewProgress"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:indeterminateTintMode="src_atop"
                            android:indeterminateTint="?attr/colorPrimary"/>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Buttons -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        app:backgroundTint="@color/share_button_enabled"
        app:tint="@color/white"
        app:icon="@drawable/ic_share" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/customizeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Customize"
        android:visibility="gone"
        app:backgroundTint="@color/share_button_enabled"
        app:tint="@color/white"
        app:icon="@drawable/ic_edit" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_back_arrow_transparent"
        android:backgroundTint="@color/surface_variant_light"
        app:borderWidth="0dp"
        app:elevation="2dp"
        android:layout_gravity="bottom|start"
        app:fabSize="mini"
        app:tint="@color/text_primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
