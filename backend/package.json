{
  "name": "eventwish-admob-backend",
  "version": "1.0.0",
  "description": "Server-side AdMob integration for EventWish application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:no-auth": "cross-env NODE_ENV=production SKIP_AUTH=false nodemon server.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:e2e": "jest --config jest.e2e.config.js",
    "benchmark": "node tests/performance/benchmark.js",
    "benchmark:small": "CONCURRENT_USERS=10 TEST_DURATION=30 node tests/performance/benchmark.js",
    "benchmark:medium": "CONCURRENT_USERS=50 TEST_DURATION=60 node tests/performance/benchmark.js",
    "benchmark:large": "CONCURRENT_USERS=100 TEST_DURATION=120 node tests/performance/benchmark.js",
    "cluster": "NODE_ENV=production LOAD_BALANCER_ENABLED=true node server.js",
    "generate-secrets": "node scripts/generate-secrets.js",
    "check-env": "node scripts/check-env.js",
    "prestart": "node scripts/check-env.js",
    "predev": "node scripts/check-env.js",
    "test:auth": "node scripts/test-auth.js",
    "test:cache": "node scripts/test-cache.js",
    "test:mongodb": "node scripts/test-mongodb.js",
    "test:coins": "jest --testMatch=\"**/coins.test.js\" --detectOpenHandles",
    "test:api": "node tools/api-tester.js",
    "test:logs": "find logs -type f -name \"*.log\" | xargs tail -n 50",
    "seed:sponsored-ads": "node scripts/seedSponsoredAds.js",
    "test:sponsored-ads": "node tools/test-sponsored-ads.js",
    "test:firebase-auth": "node scripts/test-firebase-auth.js",
    "test:server-and-firebase-auth": "concurrently \"npm run dev:no-auth\" \"wait-on http://localhost:3001/api/server/time && npx cross-env NODE_ENV=development SKIP_AUTH=true node scripts/test-firebase-auth.js\""
  },
  "keywords": [],
  "author": "EventWish Team",
  "license": "UNLICENSED",
  "dependencies": {
    "axios": "^1.6.2",
    "base64-js": "^1.5.1",
    "bcryptjs": "^2.4.3",
    "color-string": "^1.9.1",
    "component-emitter": "^1.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fb-watchman": "^2.0.2",
    "find-up": "^5.0.0",
    "firebase-admin": "^13.4.0",
    "geoip-lite": "^1.4.7",
    "helmet": "^7.2.0",
    "homedir-polyfill": "^1.0.3",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^9.0.2",
    "lodash.includes": "^4.3.0",
    "lodash.isinteger": "^4.0.4",
    "mongoose": "^6.10.0",
    "mongoose-autopopulate": "^1.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-int64": "^0.4.0",
    "onetime": "^5.1.2",
    "path-is-absolute": "^2.0.0",
    "readable-stream": "^4.7.0",
    "redis": "^4.6.11",
    "swagger-jsdoc": "^6.2.8",
    "swagger-parser": "^10.0.3",
    "swagger-ui-dist": "^5.9.0",
    "swagger-ui-express": "^5.0.0",
    "ua-parser-js": "^2.0.3",
    "util-deprecate": "^1.0.2",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "jest-puppeteer": "^9.0.1",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "puppeteer": "^21.6.1",
    "supertest": "^6.3.3",
    "wait-on": "^8.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**",
      "!jest.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": "18.x"
  },
  "private": true,
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}
